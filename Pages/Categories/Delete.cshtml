@page
@model TrialRazor.Pages.Categories.Delete
@{
    ViewData["Title"] = "Delete Category";
}


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-whitec pl-3">@ViewData["Title"]</h2>
            <hr/>
            <h3>Are you sure you want to delete this?</h3>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Category.Name" class="control-label"></label>
            <input asp-for="Category.Name" type="text" name="Name" class="form-control" disabled />
            <input type="hidden" asp-for="Category.Id">
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder" class="control-label"></label>
            <input asp-for="Category.DisplayOrder" type="text" name="DisplayOrder" class="form-control" disabled />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        <div class="mb-3 text-end">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-page="./Index" class="btn btn-secondary">Back</a>
        </div>
        
    </div>
    
</form>

<div>
    
</div>

@section Scripts {
    @{
        @* await Html.RenderPartialAsync("_ValidationScriptsPartial"); *@
        <partial name="_ValidationScriptsPartial"/>
    }
}