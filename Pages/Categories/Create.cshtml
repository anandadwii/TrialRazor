@page
@model TrialRazor.Pages.Categories.Create
@{
    ViewData["Title"] = "Create Category";
}


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-whitec pl-3">@ViewData["Title"]</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Category.Name" class="control-label"></label>
            <input asp-for="Category.Name" type="text" name="Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder" class="control-label"></label>
            <input asp-for="Category.DisplayOrder" type="text" name="DisplayOrder" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        <div class="mb-3 text-end">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-page="./Index" class="btn btn-secondary">Back</a>
        </div>
        
    </div>
    
</form>

<div>
    
</div>

@section Scripts {
    @{
        @* await Html.RenderPartialAsync("_ValidationScriptsPartial"); *@
        <partial name="_ValidationScriptsPartial"/>
    }
}