@page
@model TrialRazor.Pages.Categories.Index
@{
    ViewData["Title"] = "Category List";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-md-6">
            <h2 class="text-white">@ViewData["Title"]</h2>

        </div>
        <div class="col-md-6">
            <div style="text-align:right">
                <a asp-page="./create" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Create New
                    Category</a>
            </div>
        </div>
    </div>
    <br><br>
    <table class="table table-striped table-bordered table-hover" style="width: 100%;">
        <thead>
            <th>No</th>
            <th>@Html.DisplayNameFor(model => model.Category[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Category[0].DisplayOrder)</th>
            <td>Action</td>
        </thead>
        <tbody>
            @foreach (var item in Model.Category)
            {
                <tr>
                    <td>@(Model.Category.IndexOf(item) + 1)</td>
                    <td style="width: 80%;">@item.Name</td>
                    <td style="width: 20%;">@item.DisplayOrder</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id"><i class="bi bi-gear-fill"></i></a>
                        <a asp-page="./Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>