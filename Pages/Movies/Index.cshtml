@page
@model TrialRazor.Pages_Movies.IndexModel

@{
    ViewData["Title"] = "Index of Movies";
}

<div class="row">
    <div class="col-md-6">
        <h1>Index</h1>
    </div>
    <div class="col-md-6 text-end">
        <p>
            <a asp-page="Create" class="btn btn-primary">Create New</a>
        </p>
    </div>
</div>

<form>
    <div class="mb-1">
        <p>
            <select asp-for="MovieGenre" asp-items="Model.Genres">
                <option value="">All</option>
            </select>
            <label>Title: <input type="text" asp-for="SearchString" /></label>
            <label>Release Date: <input type="date" asp-for="SearchDate" /></label>
            <input type="submit" value="Filter" class="btn btn-primary" />
        </p>

    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Number
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Movie) {
        <tr>
                <td>@(Model.Movie.IndexOf(item) + 1)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <div class="form-group">
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-primary"><i class="bi bi-eye"></i></a>
                    <a asp-page="./Edit" class="btn btn-sencondary" asp-route-id="@item.Id"><i class="bi bi-pencil"></i></a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
